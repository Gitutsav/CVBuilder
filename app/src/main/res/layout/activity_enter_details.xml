                android:textSize="20dp"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:gravity="bottom"
                android:shadowRadius="0"
                android:background="#000000"
                android:layout_height="2dp"
                />
