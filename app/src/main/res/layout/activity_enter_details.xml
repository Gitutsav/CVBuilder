<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:animateLayoutChanges="true"
    android:layout_height="fill_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Resume Details"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:ems="10"
        android:inputType="textMultiLine"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/myborderleave"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personal"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:gravity="bottom"
                android:shadowRadius="0"
                android:textColor="#000000"
                android:layout_height="38dp"
                android:text="Personal Info." />
            <TextView

                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"

                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:gravity="bottom"
                android:shadowRadius="0"
                android:background="#000000"
                android:layout_height="2dp"
                />
            <LinearLayout
                android:id="@+id/pers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Full Name"
                android:layout_marginTop="7dp"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"

                />



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fadingEdge="vertical"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#aabbcc"
                android:textDirection="firstStrong"
                android:theme="@style/Base.TextAppearance.AppCompat.Medium"
                android:touchscreenBlocksFocus="true">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="1000"
                    android:maxLines="10"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/textviewmybordertabbed"
                    android:hint="200 letters (max.)"
                    android:textColor="#000000"
                    android:theme="@style/Base.TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Mobile Number"
                android:layout_marginTop="7dp"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"

                />



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fadingEdge="vertical"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#aabbcc"
                android:textDirection="firstStrong"
                android:theme="@style/Base.TextAppearance.AppCompat.Medium"
                android:touchscreenBlocksFocus="true">

                <EditText
                    android:id="@+id/mob"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="1000"
                    android:maxLines="10"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/textviewmybordertabbed"
                    android:hint="10 letters (max.)"
                    android:textColor="#000000"
                    android:theme="@style/Base.TextAppearance.AppCompat.Medium" />
            </android.support.design.widget.TextInputLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Current City"
                android:layout_marginTop="7dp"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"

                />



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fadingEdge="vertical"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#aabbcc"
                android:textDirection="firstStrong"
                android:theme="@style/Base.TextAppearance.AppCompat.Medium"
                android:touchscreenBlocksFocus="true">

                <AutoCompleteTextView
                    android:id="@+id/current_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="1000"
                    android:maxLines="10"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/textviewmybordertabbed"
                    android:hint="City where you currently live"
                    android:textColor="#000000"
                    android:theme="@style/Base.TextAppearance.AppCompat.Medium" >

                </AutoCompleteTextView>
            </android.support.design.widget.TextInputLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Second City"
                android:layout_marginTop="7dp"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"

                />



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fadingEdge="vertical"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#aabbcc"
                android:textDirection="firstStrong"
                android:theme="@style/Base.TextAppearance.AppCompat.Medium"
                android:touchscreenBlocksFocus="true">

                <AutoCompleteTextView
                    android:id="@+id/second_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="1000"
                    android:maxLines="10"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/textviewmybordertabbed"
                    android:hint="Different city where you are from"
                    android:textColor="#000000"
                    android:theme="@style/Base.TextAppearance.AppCompat.Medium" >
                </AutoCompleteTextView>
            </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
